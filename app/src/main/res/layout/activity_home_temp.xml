<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f6fa"
        android:orientation="vertical">

    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/home_bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="bottom"
        app:fabCradleMargin="0dp"
        app:fabCradleRoundedCornerRadius="0dp"
        android:padding="0dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/home_bottom_navigation_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:menu="@menu/home_bottom_nav_menu"
            app:labelVisibilityMode="unlabeled"
            app:itemIconSize="30dp"
            app:itemIconTint="@color/custom_bottom_nav_manu_icon_color"
            android:layout_marginEnd="16dp"
            android:layout_gravity="bottom"/>


    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_floating_menu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:fabCustomSize="70dp"
        app:layout_anchor="@id/home_bottom_app_bar"
        app:backgroundTint="@color/cmr_green"
        app:borderWidth="0dp"
        android:src="@drawable/logo"
        app:maxImageSize="50dp"
        android:contentDescription="Floating_button"
        android:scaleType="center"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>