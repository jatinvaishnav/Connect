<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="177dp"
        android:layout_height="177dp"
        android:layout_centerInParent="true"
        android:contentDescription="logo_splash"
        app:srcCompat="@drawable/logo" />

<!--    <ImageView-->
<!--        android:id="@+id/splash_logo"-->
<!--        android:layout_width="250dp"-->
<!--        android:layout_height="250dp"-->
<!--        android:contentDescription="logo_splash"-->
<!--        app:srcCompat="@drawable/logo"-->
<!--        tools:ignore="ImageContrastCheck" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setup_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/frame_background_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/lineralayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:id="@+id/splash_appname_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:letterSpacing=".388"
            android:text="CMRU CO"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/splash_appname_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:letterSpacing=".388"
            android:text="NN"
            android:textColor="@color/teal_700"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/splash_appname_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:letterSpacing=".388"
            android:text="ECT"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>
